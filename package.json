{
  "name": "auth-mongo",
  "version": "1.0.0",
  "description": "Auth server",
  "author": "Brandon Castillo",
  "license": "MIT",
  "main": "src/index.ts",
  "keywords": [
    "auth",
    "server",
    "mongo"
  ],
  "engines": {
    "node": ">=20.9.0"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install",
    "test:coverage": "echo \"Unit test pending\""
